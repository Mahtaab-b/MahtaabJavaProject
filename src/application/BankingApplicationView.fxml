<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="366.0" prefWidth="390.0"
	xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.BankingApplicationController">
	<children>
		<Label text="Search for an account number or create a new account.">
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
			<padding>
				<Insets left="60.0" />
			</padding>
		</Label>
		<TextField fx:id="searchAccountTextField">
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
		</TextField>
		<Label fx:id="searchErrorLabel" alignment="CENTER" text=""
			textAlignment="CENTER">
			<VBox.margin>
				<Insets left="10.0" />
			</VBox.margin>
		</Label>
		<HBox prefHeight="50.0" prefWidth="200.0">
			<children>
				<Button minWidth="-Infinity" mnemonicParsing="false"
					onAction="#openAnAccountScene" text="Open this account">
					<HBox.margin>
						<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
					</HBox.margin>
				</Button>
				<Button minWidth="-Infinity" mnemonicParsing="false"
					onAction="#createAccountsScene" text="Create an Account">
					<HBox.margin>
						<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
					</HBox.margin>
				</Button>
			</children>
			<VBox.margin>
				<Insets />
			</VBox.margin>
			<padding>
				<Insets left="30.0" />
			</padding>
		</HBox>
		<HBox prefHeight="50.0" prefWidth="95.0">
			<children>
				<Label text="Account Number: ">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
				<Label fx:id="accountNumberDisplay" text="****">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
			</children>
		</HBox>
		<HBox prefHeight="50.0" prefWidth="200.0">
			<children>
				<Label text="Accountholder Name: ">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
				<Label fx:id="accountHolderNameDisplay" text="****">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
			</children>
		</HBox>
		<HBox prefHeight="50.0" prefWidth="200.0">
			<children>
				<Label text="Balance: ">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
				<Label fx:id="balanceDisplay" text="****">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
			</children>
		</HBox>
		<HBox prefHeight="50.0" prefWidth="200.0">
			<children>
				<Label text="Account Type:">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
				<Label fx:id="typeDisplay" text="****">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
			</children>
		</HBox>
		<HBox prefHeight="50.0" prefWidth="200.0">
			<children>
				<Label minHeight="-Infinity"
					text="Future Value of Investment&#10;(Savings Accounts Only)"
					textAlignment="CENTER">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
				<Label fx:id="futureValue" text="****">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Label>
			</children>
		</HBox>
		<HBox minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="50.0" prefWidth="200.0">
			<VBox.margin>
				<Insets />
			</VBox.margin>
			<children>
				<Button minWidth="-Infinity" mnemonicParsing="false"
					onAction="#startDeposit" text="Deposit">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
				<Button minWidth="-Infinity" mnemonicParsing="false"
					onAction="#startWithdrawal" text="Withdraw">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
				<Button minWidth="-Infinity" mnemonicParsing="false"
					onAction="#startTransfer" text="Transfer">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
				<Button minWidth="-Infinity" mnemonicParsing="false"
					onAction="#startSavingsFromButton" text="Savings Calculator"
					textAlignment="CENTER">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
	</children>
</VBox>
